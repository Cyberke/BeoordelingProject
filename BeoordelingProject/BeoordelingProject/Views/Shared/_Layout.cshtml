<!DOCTYPE html>
<html ng-app="appModule">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beoordelingsapplicatie Howest</title>
    <link rel="icon" type="image/ico" href="@Url.Content("~/Content/img/favicon.ico")">
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/img/IPadLogo.png")" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.6/angular.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/Controller.js"></script>
    <script src="~/Scripts/JSfuncties.js"></script>
</head>

<body ng-controller="appController" onload="zetContainer()" onresize="zetContainer()">
    <header>
        <div class="header" id="mijnheader">
            <div id="banner">
                <a href="../Account/Login"><img class="logo" src="~/Content/img/logo_edit.png" /></a>
            </div>
            @if (User.IsInRole("Admin") && (User.Identity.IsAuthenticated)) {
                <div class="opties" onclick="redirectTo('Adminpaneel');"></div>
                <a href="../Student/Charts" class="stats"></a>
            }
            <div id="help" onclick="help(this);"></div>
        </div>
    </header>

        @RenderBody()

</body>
</html>
